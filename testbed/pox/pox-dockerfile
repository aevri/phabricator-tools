FROM python:2-slim
MAINTAINER Angelos Evripiotis <jevripiotis@bloomberg.net>
COPY ./py/ /opt/pox/py/
COPY ./proto/conduit-proxy /opt/pox/proto/
RUN ln -s /opt/pox/proto/conduit-proxy /usr/bin/pox
EXPOSE 8000
ENTRYPOINT ["pox"]
CMD ["--help"]
